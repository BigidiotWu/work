
.news_content{
    margin: 0 auto;
    width:95%;
    height:205px;
    border-bottom:1px solid #f7f7f7;
    clear:both;
}
.news_content_left{
     border: 2px solid #ffffff;
    border-radius: 5px;
    background-color: #ffffff;
    box-shadow: 4px 1px 1px #cccccc;
    margin: 8px;
    position: relative;
}
.image{
   width: 100%;
    height: 180px;
    background-color: #eeeeee;
}
.time {
    float: right;
    margin-top: 160px;
    margin-right: 8px;
    color: #ffffff;
    position: absolute;
    right: 0;
    top: 0;
    z-index: 1;
    font-size: 12px;
}
