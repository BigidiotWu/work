#main{

}
#main .title{
    font-size:18px;
    padding:15px;
}
#main .numbers{
    flex-direction:row;
    display:flex;
    height:30px;
    align-items: center;
}
#main .numbers image{
  padding-left:20px;
  height:30px;
  width:30px
}
#main .numbers text{
    font-size: 13px;
    padding-left:20px;
}
#main .content{
    width:90%;
    height:auto;
    
    padding-left:18px;
    font-size:16px;
    line-height: 20px;
    padding-bottom: 70px;
}
#main .content image{
  height: 185px;
    padding-top:7px;
    padding-bottom: 7px;
}
#comments{
    position: fixed;
    bottom: 0px;
    height:40px;
    width: 100%;
    background: #fff;
}
#comments .input{
    border-top: 0.5px solid #eff2f7;
    padding-top:5px;
    padding-left:10px;
}
#comments .input .text{
    width:192px;
    height:29px;
    background: #eeeeee;
    border-radius: 7px;
    font-size:14px;
    text-indent: 10px;
    padding-left:10px;
    float: left;
}
#comments .input .submit{
    width:85px;
    height:29px;
    float: right;
    margin-right:6px;
    padding-top:0px;
    text-indent: center;
    line-height:29px;
    background:#333;
    font-size:14px;
    color:#fff;
}